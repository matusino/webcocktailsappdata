<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="WebCocktailsAppData">
		<class>com.webcocktailsapp.data.model.TCocktail</class>
		<class>com.webcocktailsapp.data.model.TIngredient</class>
		<class>com.webcocktailsapp.data.model.TCocktailXIngredient</class>
		<class>com.webcocktailsapp.data.model.CocktailIngredientId</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/db_cocktails"></property>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
		</properties>
	</persistence-unit>
</persistence>
